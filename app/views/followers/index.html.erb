<h1>Listing followers</h1>

<table>
  <tr>
    <th>User twitter</th>
    <th>Id</th>
    <th>Name</th>
    <th>Screen name</th>
    <th>Url</th>
    <th>Followers count</th>
    <th>Friends count</th>
    <th>Status count</th>
    <th>Lang</th>
    <th>Last tweet date</th>
    <th>Following</th>
    <th>Follow request send</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @followers.each do |follower| %>
  <tr>
    <td><%= follower.user_twitter %></td>
    <td><%= follower.id %></td>
    <td><%= follower.name %></td>
    <td><%= follower.screen_name %></td>
    <td><%= follower.url %></td>
    <td><%= follower.followers_count %></td>
    <td><%= follower.friends_count %></td>
    <td><%= follower.status_count %></td>
    <td><%= follower.lang %></td>
    <td><%= follower.last_tweet_date %></td>
    <td><%= follower.following %></td>
    <td><%= follower.follow_request_send %></td>
    <td><%= link_to 'Show', follower %></td>
    <td><%= link_to 'Edit', edit_follower_path(follower) %></td>
    <td><%= link_to 'Destroy', follower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

